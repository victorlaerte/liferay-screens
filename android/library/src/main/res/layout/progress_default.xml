<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/progress_modal_container"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:clickable="true"
	android:focusable="true"
	android:background="@color/dimLightGray"
	>

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="center"
		android:layout_gravity="center"
		android:background="@drawable/default_white_rounded_corners"
		android:padding="@dimen/field_padding"
		>

		<ProgressBar
			android:id="@+id/progress_bar_default"
			android:layout_width="@dimen/default_progress_size"
			android:layout_height="@dimen/default_progress_size"
			/>

		<TextView
			android:id="@+id/progress_text_view"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textStyle="normal"
			android:gravity="center"
			style="@style/default_text_view_title"
			android:padding="0dp"
			/>
	</LinearLayout>
</FrameLayout>